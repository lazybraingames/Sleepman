//argument0=border amount
if(phy_position_y<view_yview[0]-argument0)
instance_destroy()
if(phy_position_y>view_yview[0]+view_hview[0]+argument0)
instance_destroy()
if(phy_position_x>view_xview[0]+view_wview[0]+argument0)
instance_destroy()
if(phy_position_x<view_xview[0]-argument0)
instance_destroy()
